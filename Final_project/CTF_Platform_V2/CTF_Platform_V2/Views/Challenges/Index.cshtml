@model IEnumerable<CTF_Platform_V2.Models.Challenge>

@{
    ViewData["Title"] = "Challenges";
    var solvedIds = ViewBag.SolvedIds as List<int> ?? new List<int>();
}

<style>
    .challenge-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

        .challenge-card:hover {
            transform: translateY(-10px); 
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }

    .solved-card {
        border: 2px solid #28a745 !important;
        box-shadow: 0 0 15px rgba(40, 167, 69, 0.4) !important; 
        background-color: #f8fff9;
    }

    .badge-category {
        font-size: 0.8em;
        padding: 5px 10px;
        border-radius: 20px;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-dark">🎯 Active Challenges</h2>
            <p class="text-muted">Test your skills and earn points.</p>
        </div>

        <a asp-action="Create" class="btn btn-dark shadow-sm px-4 py-2 rounded-pill">
            + Create New Challenge
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 text-muted">
            <h4 class="fw-light">No challenges available yet.</h4>
            <p>Check back later or add one yourself!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                bool isSolved = solvedIds.Contains(item.Id);

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm challenge-card @(isSolved ? "solved-card" : "")">

                        <div class="card-header bg-white border-bottom-0 pt-4 px-4 d-flex justify-content-between align-items-start">
                            <span class="badge bg-primary badge-category">@item.Category</span>
                            <h5 class="fw-bold text-primary">@item.Points Pts</h5>
                        </div>

                        <div class="card-body px-4">
                            <h4 class="card-title fw-bold mb-2">
                                @item.Title
                                @if (isSolved)
                                {
                                    <span class="text-success fs-5 ms-1">✓</span>
                                }
                            </h4>
                            <p class="card-text text-muted">
                                @(item.Description.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)
                            </p>
                        </div>

                        <div class="card-footer bg-transparent border-top-0 px-4 pb-4">
                            <div class="d-grid gap-2">
                                @if (isSolved)
                                {
                                    <button class="btn btn-success disabled" style="opacity:1;">
                                        ✅ Solved
                                    </button>
                                }
                                else
                                {
                                    <a asp-action="Solve" asp-route-id="@item.Id" class="btn btn-outline-primary fw-bold">
                                        Solve Challenge
                                    </a>
                                }

                                <div class="d-flex justify-content-between mt-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-secondary small text-decoration-none">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger small text-decoration-none">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>