@model CTF_Platform_V2.Models.Challenge

@{
    ViewData["Title"] = "Create Challenge";
}

<div class="container mt-5">
    <h2>Add New Challenge</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="control-label fw-bold"></label>
                    <select asp-for="Category" class="form-control">
                        <option value="Web Security">Web Security</option>
                        <option value="Cryptography">Cryptography</option>
                        <option value="Forensics">Forensics</option>
                        <option value="Reverse Engineering">Reverse Engineering</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Points" class="control-label fw-bold"></label>
                    <input asp-for="Points" type="number" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Flag" class="control-label fw-bold">The Flag (Answer)</label>
                    <input asp-for="Flag" class="form-control" placeholder="CTF{...}" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create Challenge" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>